<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/cardViewStyle"
    android:id="@+id/cardview"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="2dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1.0">
        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:src="@drawable/elon_musk"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:orientation="vertical"
            android:paddingLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:textColor="@color/theme_color"
                android:textSize="16sp"
                android:text="Elon Musk plans launch of 4000 satellites to bring Wi-Fi to most remote locations on Earth - BelfastTelegraph.co.uk - See more at: http://sciencehook.com/blog-technology,engineering,other/elon-musk-plans-launch-of-4000-satellites-to-bring-wi-fi-to-most-remote-locations-on-earth-belfasttelegraph-co-uk/#sthash.nWk1kMYn.dpuf"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_save_story"
                    android:drawableStart="@drawable/ic_save_story"
                    android:drawableLeft="@drawable/ic_save_story"
                    android:drawableTint="@color/newsfeed_story"
                    android:drawablePadding="5dp"
                    android:textColor="@color/newsfeed_story"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:paddingRight="8dp"/>
                <TextView
                    android:id="@+id/newsfeed_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_share_story"
                    android:drawableLeft="@drawable/ic_share_story"
                    android:drawableTint="@color/newsfeed_story"
                    android:drawablePadding="5dp"
                    android:text="@string/text_share_story"
                    android:textColor="@color/newsfeed_story"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>